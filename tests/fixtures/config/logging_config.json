{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(levelname)s - %(asctime)s - %(name)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "color": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s%(levelname)s%(reset)s - %(asctime)s - %(name)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "color",
      "stream": "ext://sys.stdout"
    },
    "error_file_handler": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "formatter": "simple",
      "filename": "errors.log",
      "encoding": "utf8",
      "mode": "w"
    }
  },
  "root": {
    "level": "INFO",
    "handlers": [
      "console",
      "error_file_handler"
    ]
  }
}